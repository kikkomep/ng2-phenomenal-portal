{
  "project": {
    "version": "1.0.0-beta.26",
    "name": "ng2-phenomenal-portal"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.json",
      "prefix": "ph",
      "mobile": false,
      "styles": [
        "assets/css/font-awesome.min.css",
        "assets/css/bootstrap.min.css",
        "assets/css/mdb.min.css",
        "styles.css",
        "theme.scss"
      ],
      "scripts": [
        "assets/js/xml2json.min.js",
        "assets/js/jsrsasign-5-0-14-all-min.js"
      ],
      "environments": {
        "source": "environments/environment.ts",
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "addons": [],
  "packages": [],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "prefixInterfaces": false,
    "inline": {
      "style": false,
      "template": false
    },
    "spec": {
      "class": false,
      "component": true,
      "directive": true,
      "module": false,
      "pipe": true,
      "service": true
    }

  }
}
